<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout


    android:background="@drawable/background_rounded"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ImageView

        android:layout_marginStart="10dp"
        android:id="@+id/img_recycler"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:layout_marginStart="10dp"
        style="@style/CoinBitText.Body1"
        android:id="@+id/txt_bitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC"
        app:layout_constraintStart_toEndOf="@+id/img_recycler"
        app:layout_constraintTop_toTopOf="@+id/img_recycler" />

    <TextView

        android:id="@+id/txt_coinbase"
        style="@style/CoinBitText.BodyAlternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Coinbase"
        app:layout_constraintStart_toEndOf="@+id/img_recycler"
        app:layout_constraintTop_toBottomOf="@+id/txt_bitcoin" />

    <TextView
        android:id="@+id/txtprice"
        style="@style/CoinBitText.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="$ 3,181"
        app:layout_constraintBottom_toBottomOf="@+id/txt_bitcoin"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView

        android:id="@+id/txt_million"
        style="@style/CoinBitText.BodyAlternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="$ 2.4 million"
        app:layout_constraintEnd_toEndOf="@+id/txtprice"
        app:layout_constraintStart_toStartOf="@+id/txtprice"
        app:layout_constraintTop_toBottomOf="@+id/txtprice" />

</androidx.constraintlayout.widget.ConstraintLayout>