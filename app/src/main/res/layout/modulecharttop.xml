<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_marginTop="14dp"
        android:id="@+id/txtprice"
        style="@style/CoinBitText.Huge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 40.90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/text_flesh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â–²"
        android:textColor="@color/tertiaryTextColor"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtprice" />


    <TextView
        android:id="@+id/textdolar"
        style="@style/CoinBitText.BodyAlternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="$ 0.04"
        app:layout_constraintBottom_toBottomOf="@+id/text_flesh"
        app:layout_constraintStart_toEndOf="@+id/text_flesh"
        app:layout_constraintTop_toBottomOf="@+id/txtprice"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_marginStart="4dp"
        android:id="@+id/textdarsad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+8.1%"
        android:textColor="@color/tertiaryTextColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textdolar"
        app:layout_constraintStart_toEndOf="@+id/textdolar"
        app:layout_constraintTop_toTopOf="@+id/textdolar"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>